{
  "name": "alttp-randomizer-tracker",
  "version": "1.0.0",
  "description": "ALTTP Randomizer Tracker - Standalone Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build": "electron-builder --win --mac --linux"
  },
  "build": {
    "appId": "com.alttp.tracker",
    "productName": "ALTTP Randomizer Tracker",
    "copyright": "ALTTP Randomizer Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "tracker/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "tracker/images/icons/apple-touch-icon.png",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": "AppImage",
      "icon": "tracker/images/icons/android-chrome-512x512.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ALTTP Tracker"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
